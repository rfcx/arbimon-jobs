<!DOCTYPE html>
<html>

<head>
    <% include head %>
    <title>ARBIMON II - Login</title>
</head>

<body>    
    <div class="container">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-3">
                <h1>ARBIMON II</h1>
                <form method="post" action="/login" role="form">
                    <div class="form-group">
                        <label class="sr-only" for="user">Username</label>
                        <input id="user"class="form-control" name="username" type="text" placeholder="Username" />
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="pass">Password</label>
                        <input id="pass" class="form-control" name="password" type="password" placeholder="Password" />
                    </div>
                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in"></i> Sign in</button>
                </form>
            </div>
        </div>
    
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <!-- error message -->
                <% if(message.length) { %>
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <strong><%= message %></strong>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>
