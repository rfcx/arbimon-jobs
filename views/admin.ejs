<!DOCTYPE html>
<html ng-app="admin">

<head>
    <% include head %>
    <title>Arbimon 2 - <%=title %></title>
</head>

<body ng-controller="AdminCtrl">
    <% include home-nav %>
    <div class="container">
        <!-- <div class="row">
            <div class="col-sm-5">
            <div class="well">
                last update: {{ lastUpdate | date : 'M/d/yy HH:mm:ss' }}
            </div>
            </div>
        </div> -->
        <div class="row">
            <div class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        JobsQueue
                    </div>
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="(param, val) in jobsStatus">{{tr[param] || param}}: {{ val }}</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-5" ng-controller="JobTypesController as job_types">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Active jobs
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Last Update</th>
                            </tr>
                        <thead>
                        <tbody>
                            <tr ng-repeat="job in activeJobs">
                                <td>{{job.job_id }}</td>
                                <td>
                                    <i class="fa fa-circle" ng-style="{color : job_types.for[job.job_type_id].color}"
                                        tooltip="{{job_types.for[job.job_type_id].name}}" tooltip-append-to-body="true"
                                    ></i>
                                    {{ job.name }}
                                </td>
                                <td>
                                    <div ng-hide="job.state == 'processing' && job.percentage" >{{job.state}}</div>
                                    <div ng-show="job.state == 'processing' && job.percentage">
                                        <div class="progress progress-striped active"> 
                                         <div ng-style="{'background-color':job_types.for[job.job_type_id].color, width : ( job.percentage + '%' ) }" aria-valuemax="100" aria-valuemin="0" aria-valuenow="{{job.percentage}}" role="progressbar" class="progress-bar">
                                            {{job.percentage}}%
                                         </div>
                                        </div>
                                    </div>
                                </td>
                                <td>{{job.last_update}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</body>

</html>
