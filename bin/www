#!/usr/bin/env node
var debug = require('debug')('arbimon2');
var app = require('../app');

app.set('port', process.env.PORT || 3000);
app.set('tls_port', process.env.TLS_PORT || 3003);

if (app.get('env') === 'production') {
    
    if(!process.env.SSL_KEY || !process.env.SSL_CERT)
        throw new Error("no ssl");
        
    var keyFile = process.env.SSL_KEY;
    var certFile = process.env.SSL_CERT;
    
    var http = require('http');
    var https = require('https');
    var fs = require('fs');

    var options = {
        key: fs.readFileSync(keyFile),
        cert: fs.readFileSync(certFile)
    };

    http.createServer(app).listen(app.get('port'));
    https.createServer(options, app).listen(app.get('tls_port'));
}
else {
    var server = app.listen(app.get('port'), function() {
        debug('Express server listening on port ' + server.address().port);
    });
}
